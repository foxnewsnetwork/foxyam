.row
  #cookie-crumbs
    %ol
      %li= link_to t(:my_company)
      %li= link_to t(:email_accounts)
      %li Email Index

.row
  %h1.page-title
    Email Index -
    = emails.count

.row
  .one-quarter
    .list-group
      - inboxes.each do |inbox|
        = link_to '#show_inbox', class: 'list-group-item' do
          %h4.ellipsis
            = inbox.name
            %span.pull-right.badge= inbox.count
  .three-quarters
    .list-group
      - emails.each do |email|
        = link_to email_path(1), class: 'list-group-item' do
          %h4
            %span.tab= email.from_presentation_google_style
            %span.bold.dash= email.subject
            = email.plain_content.truncate 55
