%nav.navbar
  .container
    .navbar-header
      = link_to root_path, class: 'navbar-brand' do
        %i.fa-anchor
        = company_legal_name
      
    %ul.nav.navbar-nav
      - if user_signed_in?      
        %li
          = link_to t(:negotiations), merchant_negotiations_path(current_merchant)
      
    %ul.nav.navbar-nav.navbar-right
      - if user_signed_in?
        %li
          = link_to user_path(current_user) do
            %i.fa-user
            = t(:my_account)
      - else
        %li
          = link_to new_user_session_path do
            %i.fa-user
            = t(:sign_in)